# Flask
FLASK_ENV=development
SECRET_KEY=dev-secret-change-me

# PostgreSQL (例)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/p_alert

# Open-Meteo (今治の目安：33.59, 132.97)
DEFAULT_LAT=33.59
DEFAULT_LON=132.97

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_gmail_address@gmail.com
SMTP_PASS=your_app_password
MAIL_FROM=your_gmail_address@gmail.com

# 通知判定（hPa換算での差分の目安）
# Open-Meteoはsurface_pressureが「hPa or Pa」系で返ることがあるので、内部で吸収します
PRESSURE_CHANGE_THRESHOLD_HPA=8.0

# 何時間先まで見て通知判定するか
FORECAST_HOURS=24
